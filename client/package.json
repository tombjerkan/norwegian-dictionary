{
    "name": "client",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "node": "12.13.1"
    },
    "dependencies": {
        "@types/classnames": "^2.2.11",
        "@types/dompurify": "^2.2.1",
        "@types/history": "^4.7.8",
        "@types/jest": "^25.2.3",
        "@types/node": "^13.13.40",
        "@types/react": "^16.14.2",
        "@types/react-dom": "^16.9.10",
        "@types/styled-components": "^5.1.7",
        "autoprefixer": "^9.8.6",
        "axios": "^0.21.1",
        "classnames": "^2.2.6",
        "dompurify": "^2.2.6",
        "history": "^4.10.1",
        "lodash": "^4.17.20",
        "postcss-cli": "^7.1.2",
        "react": "^16.14.0",
        "react-collapse": "^5.1.0",
        "react-dom": "^16.14.0",
        "react-motion": "^0.5.2",
        "react-router-dom": "^5.2.0",
        "react-scripts": "^3.4.4",
        "styled-components": "^5.2.1",
        "tailwindcss": "^1.9.6",
        "typescript": "^3.9.7"
    },
    "scripts": {
        "start": "npm run build:tailwind && react-scripts start",
        "build": "npm run build:tailwind && react-scripts build",
        "predeploy": "npm run build",
        "deploy-draft": "netlify deploy",
        "deploy": "netlify deploy --prod",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "lint": "lint-staged",
        "prettier": "prettier --tab-width 4 --write \"**/*.js\" \"**/*.jsx\" \"**/*.ts\" \"**/*.tsx\" \"**/*.json\" ",
        "storybook": "npm run build:tailwind && start-storybook -p 9009 -s public",
        "build-storybook": "npm run build:tailwind && build-storybook -s public",
        "build:tailwind": "postcss src/tailwind/tailwind.css -o src/tailwind/tailwind.generated.css && node ./generate-theme.js"
    },
    "lint-staged": {
        "*.js|*.jsx|*.ts|*.tsx": "prettier --tab-width 4 --check",
        "*.json": [
            "prettier --tab-width 4 --write",
            "git add"
        ]
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "proxy": "http://localhost:8000/",
    "devDependencies": {
        "@storybook/addon-actions": "^5.3.21",
        "@storybook/addon-links": "^5.3.21",
        "@storybook/addons": "^5.3.21",
        "@storybook/preset-create-react-app": "^2.1.2",
        "@storybook/react": "^5.3.21",
        "lint-staged": "^9.5.0",
        "netlify-cli": "^3.4.6",
        "prettier": "^1.19.1"
    }
}
