{
    "name": "norwegian-dictionary",
    "version": "1.0.0",
    "license": "MIT",
    "engines": {
        "node": "12.6.0"
    },
    "cacheDirectories": [
        "server/node_modules",
        "client/node_modules"
    ],
    "scripts": {
        "postinstall": "(cd server && npm install); (cd client && npm install)",
        "start": "npm run start:server",
        "start:server": "cd server && npm start",
        "start:client": "cd client && npm start",
        "build": "npm run build:client",
        "build:client": "cd client && npm install && npm run build",
        "lint:server": "cd server && npm run lint -s",
        "lint:client": "cd client && npm run lint -s",
        "lint": "run-s -c -s lint:*",
        "test:server": "cd server && npm test",
        "test:e2e": "testcafe firefox testcafe.js"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    },
    "devDependencies": {
        "@testing-library/testcafe": "^2.1.1",
        "husky": "^3.0.1",
        "npm-run-all": "^4.1.5",
        "testcafe": "^1.3.3"
    },
    "dependencies": {
        "react-collapse": "^4.0.3",
        "react-motion": "^0.5.2"
    }
}
