{
    "name": "server",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "engines": {
        "node": "12.6.0"
    },
    "cacheDirectories": [
        "node_modules",
        "client/node_modules"
    ],
    "scripts": {
        "start": "node server.js",
        "build": "cd client && npm install && npm run build",
        "test": "testcafe firefox testcafe.js"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": "prettier --tab-width 4 --check",
        "*.json": [
            "prettier --tab-width 4 --write",
            "git add"
        ],
        "*.css": "stylelint"
    },
    "dependencies": {
        "@google-cloud/translate": "^4.1.1",
        "axios": "^0.19.0",
        "dotenv": "^8.0.0",
        "express": "^4.17.1",
        "jsdom": "^15.1.1",
        "lodash": "^4.17.14"
    },
    "devDependencies": {
        "eslint-plugin-import": "^2.18.2",
        "husky": "^3.0.1",
        "lint-staged": "^9.2.1",
        "prettier": "^1.18.2",
        "stylelint": "^10.1.0",
        "stylelint-config-standard": "^18.3.0",
        "testcafe": "^1.3.3"
    }
}
